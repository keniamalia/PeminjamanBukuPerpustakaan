<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl4018.pemijamanbukuperpustakaan.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="352dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hj" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Nama"
                android:textColor="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Telepon/HP"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/rgroupStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Perempuan" />

            <RadioButton
                android:id="@+id/lk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Laki - Laki" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Buku" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:checked="false"
            android:text="Mata Pelajaran" />

        <CheckBox
            android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
            android:text="Novel" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Majalah" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Buku" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lama Peminjaman" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnsubmit"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.05"
            android:background="@drawable/btnbg"
            android:text="Submit"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil1"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil2"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil3"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil4"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil5"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil6"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />
    </LinearLayout>
</ScrollView>